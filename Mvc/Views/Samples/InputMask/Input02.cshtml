
@model Mvc.Models.UserData

@{
    ViewBag.Title = "Input Mask Sample 2";
}

<h2>Use 'data-' attributes for input masks</h2>

@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-xs-12 col-md-6 center-block">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Employee Info</h3>
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Email)
                        @Html.TextBoxFor(m => m.Email,
               new { data_inputmask = "'alias': 'email'" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.StartDate, "Start Date")
                        @Html.TextBoxFor(m => m.StartDate,
               new { data_inputmask = "'alias': 'date'" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.PhoneNumber, "Phone Number")
                        @Html.TextBoxFor(m => m.PhoneNumber,
               new { data_inputmask = "'mask': '(999) 999-9999'" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Salary)
                        @Html.TextBoxFor(m => m.Salary,
               new
               {
                   data_inputmask =
                       "'alias': 'currency', 'removeMaskOnSubmit': 'true'"
               })
                    </div>
                </div>
                <div class="panel-footer">
                    <button type="button"
                            class="btn btn-primary">
                        Submit
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@section scripts
{
    <script src="~/Scripts/jquery.inputmask.bundle.min.js"></script>

    <script>
        $(document).ready(function () {
            $(":input").inputmask();
        });
    </script>
}